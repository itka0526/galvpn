generator client {
  provider = "prisma-client-js"
  output   = "../../shared/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Language {
  en
  ru
  mn
}

model User {
  // General Info
  telegramID       String   @id @unique
  preferedLanguage Language @default(en)
  // Date
  activeTill       DateTime
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  // Status
  banned           Boolean  @default(false)
  // Store
  keys             Key[]

  @@index([telegramID])
}

model Key {
  // General
  id             Int      @id @default(autoincrement())
  userTelegramID String
  createdAt      DateTime @default(now())
  // Key related
  configFile     String
  configFilePath String
  // Belongs to
  user           User     @relation(fields: [userTelegramID], references: [telegramID])

  @@index([id, userTelegramID])
}
